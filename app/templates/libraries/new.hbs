
<h2>Add Data</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The Title"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">UserId</label>
    <div class="col-sm-10">
      {{input type="text" value=model.userId class="form-control" placeholder="The UserID"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Id</label>
    <div class="col-sm-10">
      {{input type="text" value=model.idNum class="form-control" placeholder="The Id"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action 'saveLibrary' model}}>Add to list</button>
    </div>
  </div>
</div>