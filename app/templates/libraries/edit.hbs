
<h2>Edit Library</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The title"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">UserId</label>
    <div class="col-sm-10">
      {{input type="text" value=model.userId class="form-control" placeholder="The userId"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Id</label>
    <div class="col-sm-10">
      {{input type="text" value=model.id class="form-control" placeholder="The id"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action 'saveLibrary' model}}>Save changes</button>
      {{#link-to 'libraries.index' tagName="li" class="btn btn-danger"}}Back{{/link-to}}
    </div>
  </div>
</div>